@model IEnumerable<OnlineAuction.ViewModels.OrderVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

    <table class="table">
        <tr>
            <th>Image</th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Account.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.Raw("<img  style='width: 50%',  src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
