@*@model DataLayer.Entities.Auction*@

@{
    if(Model == null) {
        ViewBag.Title = "Create";
    }

}

<h2>@ViewBag.Title</h2>
<script>
    //очист. стиля
    $(function () {
        $('a#back_to_list').parent().css("clear", "both")
    })
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Auction</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Partial("Partial/_FormAddProduct")

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes:new { @id="back_to_list"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
