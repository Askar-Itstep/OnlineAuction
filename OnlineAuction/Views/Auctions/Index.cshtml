@model IEnumerable<DataLayer.Entities.Auction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="d-flex flex-row">

    <ul class="nav flex-column" style="width:25%; float:left">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Active</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
        </li>
        <li>
            @Html.ActionLink("Create New", "Create")
        </li>
    </ul>


    @{
        if (Model.Count() != 0) {

            <table class="table" style="width:75%">
                <tr>
                    <th>
                        @Html.DisplayName("ActorId")
                    </th>
                    <th>
                        @Html.DisplayName("OrderId")
                    </th>
                    <th>
                        @Html.DisplayName("Image Product")
                    </th>
                    <th>
                        @Html.DisplayName("Price Winner")
                    </th>
                    <th>
                        @Html.DisplayName("WinnerId")
                    </th>
                    <th>
                        @Html.DisplayName("BeginTime")
                    </th>
                    <th>
                        @Html.DisplayName("EndTime")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model) {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actor.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Id)
                        </td>
                        <td>
                            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," 
                                         + Convert.ToBase64String(item.Order.Items.FirstOrDefault().Product.Image.ImageData) + "\" />")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=> item.Order.Items.FirstOrDefault().EndPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Winner.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BeginTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
            }
        }


            <div class="container" style="width:75%">
                <form action="/main" method="post" name="items">
                    @{
                        if (Model.Count() != 0) {

                            <div class="d-flex flex-wrap bd-highlight mb-3 jumbotron jumbotron-fluid">
                                @foreach (var auction in Model) {
                                    foreach (var item in auction.Order.Items) {
                                        <div class="card my-3" style="width: 200px">
                                            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Product.Image.ImageData) + "\" />")
                                            <table class="table table-hover table-sm">
                                                <tr>
                                                    <th>Title</th>
                                                    @{ if (item != null) {
                                                            <td>@item.Product.Title</td>
                                                        }
                                                    }
                                                </tr>
                                                <tr>
                                                    <th>Price</th>
                                                    @{ if (item != null) {
                                                            <td>@item.Product.Price</td>
                                                        }
                                                    }
                                                </tr>
                                                @{
                                                    if (ViewBag.IsActor != 1) {
                                                        <tr>
                                                            <th>Quantity</th>
                                                            <td>
                                                                <input type="number" class="inpQuantity" data-num=@item.Id name="number" value="" style="width: 50px">
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </table>

                                            @{
                                                if (!User.IsInRole("admin") && ViewBag.IsActor == 1) {
                                                    <div class="form-inline">
                                                        <a class="btn btn-warning ml-2" href="/delete/@item.Id}">Delete</a>
                                                        <div style="width: 5px"></div>
                                                        <a class="btn btn-info ml-2" href="/editProduct/@item.Id">Edit</a>
                                                    </div>

                                                    <div class="card-footer text-muted" id="@item.Id">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" name="itemId" id="@item.Id" value="@item.Id">
                                                            <label class="custom-control-label" for=@item.Id>Add to cart</label>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div style="width: 10px"></div>
                                    }
                                }
                            </div>


                            if (!User.IsInRole("admin") && ViewBag.IsActor != 1) {
                                <div class="d-flex justify-content-center" id="divResult">
                                    <input type="button" class="btn btn-primary" id="btnToCart" value="Start the ordering">
                                    <input type="hidden" value="${_csrf.token}" name="_csrf">
                                </div>
                            }

                        }
                        else {
                            <div>
                                <h4>Сделайте что-нибудь!</h4>
                                <div><img style="width: 75%" src="https://getfile.dokpub.com/yandex/get/https://yadi.sk/i/GWWs5U_NFCraYQ" /></div>
                            </div>
                        }
                    }

                </form>
            </div>
        </div>